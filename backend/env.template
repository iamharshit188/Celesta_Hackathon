# Fake News & Deepfake Detection App - Environment Configuration
# Copy this file to .env and fill in your actual API keys

# Server Configuration
HOST=127.0.0.1
PORT=8000
DEBUG=true

# API Keys - Replace with your actual keys
# OpenAI API Key for advanced text analysis (optional, not recommended)
OPENAI_API_KEY=your_openai_api_key_here

# Alternative AI API Keys (recommended)
# Groq API for fast and free text analysis and speech-to-text
GROQ_API_KEY=your_groq_api_key_here

# Google Gemini API for text analysis
GEMINI_API_KEY=your_gemini_api_key_here

# HuggingFace API Key for model access
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Google Search API for fact-checking sources
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_google_search_engine_id_here

# News API for news feed
NEWS_API_KEY=your_news_api_key_here

# Perplexity API for enhanced fact-checking
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Model Configuration
TEXT_MODEL_NAME=hamzab/roberta-fake-news-classification
FAKE_NEWS_MODEL_NAME=hamzab/roberta-fake-news-classification

# File Upload Limits
MAX_FILE_SIZE=52428800
ALLOWED_VIDEO_FORMATS=.mp4,.avi,.mov,.mkv

# Model Cache Directory
MODEL_CACHE_DIR=./models

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Processing Limits
MAX_TEXT_LENGTH=5000
MAX_PROCESSING_TIME=300

# Confidence Thresholds
HIGH_CONFIDENCE_THRESHOLD=0.8
LOW_CONFIDENCE_THRESHOLD=0.3
